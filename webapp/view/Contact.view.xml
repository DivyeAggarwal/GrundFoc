<mvc:View
	controllerName="servicerequests.controller.Contact"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">
    <!-- <Panel
		id="containerLayout"
		width="70%"> -->
        <Page
		title="Page"
		class="sapUiContentPadding" >
        <customHeader>
			<Toolbar>
				<!-- <Button type="Back" press="onPress" /> -->
				<ToolbarSpacer/>
				<Title text="Welcome to self service portal" level="H2"/>
				<ToolbarSpacer/>
				<!-- <Button icon="sap-icon://edit" type="Transparent" press="onPress" ariaLabelledBy="editButtonLabel"/> -->
			</Toolbar>

		</customHeader>
    <Table id="idProductsTable" width="70%"
		inset="false"
		items="{
			path: '/CountryContactsRootCollection',
			sorter: {
				path: 'ZContactMatrixID'
			}
		}">
		
        <headerToolbar>
									<Toolbar>
										<Title text=""/>
										<ToolbarSpacer/>
										<Button text="Ticket Portal" press="onAddRelatedDeal" enabled="true" id="idAddRelatedDeal"/>
                                    </Toolbar>
								</headerToolbar>
		<infoToolbar>
			<OverflowToolbar>
				<Label text="Available contacts"/>
			</OverflowToolbar>
		</infoToolbar>
		<columns>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true">
				<Text text="Country" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="End">
				<Text text="Phone" />
			</Column>
			<Column
				minScreenWidth="Desktop"
				demandPopin="true"
				hAlign="Center">
				<Text text="Mail" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						text="{ZCountryText}"/>
                        <ObjectStatus text="{ZCountryPhText}"/>
                        <ObjectStatus text="{ZCountryMailText}"/>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
    </Page>
    <!-- </Panel> -->
</mvc:View>